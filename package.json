{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:web": "turbo run build --filter web",
    "build:ui": "turbo run build --filter @kraft/ui",
    "clean": "turbo run clean",
    "dev": "turbo run dev",
    "dev:web": "turbo run dev --filter web",
    "dev:ui": "turbo run dev --filter @kraft/ui",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  },
  "name": "kraft"
}
